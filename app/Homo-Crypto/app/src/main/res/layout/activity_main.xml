<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"

    android:weightSum="1"
    android:id="@+id/HomoCrypto">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_num1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_num2"
        android:layout_below="@+id/editText_num1"
        android:layout_alignRight="@+id/editText_num1"
        android:layout_alignEnd="@+id/editText_num1"
        android:layout_marginTop="44dp"
        android:layout_alignLeft="@+id/editText_num1"
        android:layout_alignStart="@+id/editText_num1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num1"
        android:id="@+id/textView_num1"
        android:layout_alignBottom="@+id/editText_num1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/num2"
        android:id="@+id/textView2_num2"
        android:layout_alignBottom="@+id/editText_num2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test:"
        android:id="@+id/textView_test"
        android:layout_alignTop="@+id/textView_result"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_result"
        android:layout_below="@+id/editText_num2"
        android:layout_toRightOf="@+id/textView2_num2"
        android:layout_toEndOf="@+id/textView2_num2"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/btn_calc"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/editText_num2"
        android:layout_alignEnd="@+id/editText_num2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrpyt"
        android:id="@+id/send"
        android:layout_below="@+id/btn_calc"
        android:layout_alignRight="@+id/editText_num2"
        android:layout_alignEnd="@+id/editText_num2"
        android:layout_alignLeft="@+id/btn_calc"
        android:layout_alignStart="@+id/btn_calc" />

</RelativeLayout>
